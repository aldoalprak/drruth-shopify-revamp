{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  #RX_ImageWithText--{{ section.id }} {
    background-color: {{ section.settings.imgText-bg-color }};
    padding: 95px 65px;
  }

  .section-{{ section.id }} .image-with-text--overlap .image-with-text__media-item--top {
    align-self: auto !important;
  }

  .section-{{ section.id }} .image-with-text--overlap .image-with-text__media-item--middle {
    align-self: auto !important;
  }

  .section-{{ section.id }} .image-with-text--overlap .image-with-text__media-item--bottom {
    align-self: auto !important;
  }

  .section-{{ section.id }} .rx-img-with-text__heading.font_blt {
    font-family: "BLT-Heirloom";
    font-weight: 300;
    font-size: 30px;
    color: #1E1E1E;
    line-height: 35px;
    margin-top: 0;
    margin-bottom:0;
  }

  .section-{{ section.id }} .rx-img-with-text__heading.font_oakley {
    font-family: 'Oakley Script';
    font-style: normal;
    font-weight: 400;
    font-size: 64px;
    line-height: 57px;
    letter-spacing: 0.02em;
    color: #184B44;
    margin-top: 0;
    margin-bottom:0;
  }


  .section-{{ section.id }} .rx-img-with-text__content {
    font-family: "Josefin Sans";
    font-weight: 400;
    font-size: 18px;
    color: #1E1E1E;
    margin-top: 0;
    margin-bottom: 0;
    line-height: 30px;
  }

  .section-{{ section.id }} .rx-img-with-text__btn {
    font-family: "Josefin Sans";
    font-weight: 500;
    font-size: 14px;
    color: #1E1E1E;
    box-sizing: border-box;
    border: 2px solid #184B44;
    border-radius: 25.5px;
    padding: 7px 50px;
    border-color: #184B44;
    text-align: left;
  }

  .rx_grid__item_text-type1, .rx_grid__item_img-type2  {
    width: calc(25% - var(--grid-mobile-horizontal-spacing) * 3 / 4);
    max-width: calc(50% - var(--grid-mobile-horizontal-spacing) / 2);
    max-width: 100%;
    width: 100%;
  }

  .rx_grid__item_img-type1, .rx_grid__item_img-type2 {
    width: calc(25% - var(--grid-mobile-horizontal-spacing) * 3 / 4);
    max-width: calc(50% - var(--grid-mobile-horizontal-spacing) / 2);
    max-width: 100%;
    width: 100%;
  }

  .section-{{ section.id }} .rx_img_with_text_button {
    margin-right: {% if section.settings.desktop_button_alignment == "center" %} auto {% else %} 0 {% endif %};
    margin-left: {% if section.settings.desktop_button_alignment == "center" %} auto {% else %} 0 {% endif %};
    text-align: {{section.settings.desktop_button_alignment}};
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }

    .rx_grid__item_text-type1 {
      width: calc(25% - var(--grid-mobile-horizontal-spacing) * 3 / 4);
      max-width: calc(37% - var(--grid-mobile-horizontal-spacing) / 2);
      flex-grow: 1;
      flex-shrink: 0;
    }
/* 4060 */
    .rx_grid__item_img-type1 {
      width: calc(25% - var(--grid-mobile-horizontal-spacing) * 3 / 4);
      max-width: calc(63% - var(--grid-mobile-horizontal-spacing) / 2);
      flex-grow: 1;
      flex-shrink: 0;
    }

    .rx_grid__item_text-type2 {
      width: calc(25% - var(--grid-mobile-horizontal-spacing) * 3 / 4);
      max-width: calc(55% - var(--grid-mobile-horizontal-spacing) / 2);
      flex-grow: 1;
      flex-shrink: 0;
    }
/* 4060 */
    .rx_grid__item_img-type2 {
      width: calc(25% - var(--grid-mobile-horizontal-spacing) * 3 / 4);
      max-width: calc(55% - var(--grid-mobile-horizontal-spacing) / 2);
      flex-grow: 1;
      flex-shrink: 0;
    }

    .section-{{ section.id }} .rx-heading-text-alignment-left {
      align-self: flex-start;
      text-align: left;
    }

    .section-{{ section.id }} .rx-heading-text-alignment-right {
      align-self: flex-end;
      text-align: right;
    }

    .section-{{ section.id }} .rx-heading-text-alignment-center {
      align-self: center;
      text-align: center;
    }
  }

  @media screen and (max-width: 1000px) {
    #RX_ImageWithText--{{ section.id }} {
      background-color: {{ section.settings.imgText-bg-color }};
      padding-right: 15px;
      padding-left: 15px;
    }
  }

  @media screen and (max-width: 750px) {
    #RX_ImageWithText--{{ section.id }} {
      background-color: {{ section.settings.imgText-bg-color }};
      padding-right: 10px;
      padding-left: 10px;
    }

    #RX_ImageWithText--{{ section.id }} .rx_read_more_arrow_img_with_text {
      display: {% if section.settings.show_arrow_mobile == "no" %} none {% endif %};
    }

    .rx-img-with-text__content {
      text-align: center;
    }

    .section-{{ section.id }} .rx-heading-text-alignment-center, 
    .rx-heading-text-alignment-right, 
    .rx-heading-text-alignment-left {
      /* align-self: center; */
      text-align: center;
      margin-right: auto;
      margin-left: auto;
    }

    .section-{{ section.id }} .rx_img_with_text_button {
      margin-right: auto;
      margin-left: auto;
    }

  }
{%- endstyle -%}

<div class="section-{{ section.id }} image-with-text image-with-text--{{ section.settings.content_layout }} page-width isolate{% if settings.text_boxes_border_thickness > 0 and settings.text_boxes_border_opacity > 0 and settings.media_border_thickness > 0 and settings.media_border_opacity > 0 %} collapse-borders{% endif %} section-{{ section.id }}-padding">
  <div class="image-with-text__grid grid grid--gapless grid--1-col grid--{% if section.settings.desktop_image_width == 'medium' %}2-col-tablet{% else %}3-col-tablet{% endif %}{% if section.settings.layout == 'text_first' %} image-with-text__grid--reverse{% endif %}">
    <div class="image-with-text__media-item image-with-text__media-item--{{ section.settings.desktop_image_width }} rx_grid__item_img-{{section.settings.grid_type}}">
      <div
        class="image-with-text__media image-with-text__media--{{ section.settings.height }} global-media-settings {% if section.settings.image != blank %}media{% else %}image-with-text__media--placeholder placeholder{% endif %}"
        {% if section.settings.height == 'adapt' and section.settings.image != blank %}
          style="padding-bottom: {{ 1 | divided_by: section.settings.image.aspect_ratio | times: 100 }}%;"
        {% endif %}
      >
        {%- if section.settings.image != blank -%}
          {%- capture sizes -%}
            (min-width: {{ settings.page_width }}px) {{ settings.page_width | minus: 100 | divided_by: 2 }}px,
            (min-width: 750px) calc((100vw - 130px) / 2), calc((100vw - 50px) / 2)
          {%- endcapture -%}
          {{
            section.settings.image
            | image_url: width: 1500
            | image_tag: loading: 'lazy', sizes: sizes, widths: '165, 360, 535, 750, 1070, 1500'
          }}
        {%- else -%}
          {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
        {%- endif -%}
      </div>
    </div>
    <div class="image-with-text__text-item rx_grid__item_text-{{section.settings.grid_type}}">
      <div
        id="RX_ImageWithText--{{ section.id }}"
        class="image-with-text__content image-with-text__content--mobile-{{ section.settings.mobile_content_alignment }} image-with-text__content--{{ section.settings.height }} content-container"
      >
        {%- for block in section.blocks -%}
          {% case block.type %}
            {%- when 'heading' -%}
              
              <p class="rx-img-with-text__heading {{block.settings.font_family}} rx-heading-text-alignment-{{section.settings.desktop_title_alignment }}" {{ block.shopify_attributes }}>
                {{ block.settings.heading | escape }}
              </p>
            
            {%- when 'text' -%}
              <div class="rx-img-with-text__content image-with-text__content--desktop-{{ section.settings.desktop_content_alignment }}">
                {{ block.settings.text }}
              </div>
            {%- when 'button' -%}
              {%- if block.settings.button_label != blank -%}
                <div class="rx_img_with_text_button">
                  <a
                    {% if block.settings.button_link == blank %}
                      role="link" aria-disabled="true"
                    {% else %}
                      href="{{ block.settings.button_link }}"
                    {% endif %}
                    class="rx_read_more_btn_green"
                  >
                    {{ block.settings.button_label | escape }}
                    <img 
                      id="rx_read_more_arrow_black"
                      class="rx_read_more_arrow_img_with_text"
                      src="https://cdn.shopify.com/s/files/1/0017/5443/1553/files/blog_arrow.png?v=1680443191"
                    >
                  </a>
              </div>
              {%- endif -%}
          {%- endcase -%}
        {%- endfor -%}
      </div>
    </div>
  </div>
</div>

