<div class="cmax_container">

    <div class="workcontent">
        <h2 class="cworkhead">{{section.settings.workhead1 }}</h2>
        <h2 class="cworkdes">{{section.settings.worksub}}</h2>
    </div> 
      
       <div class="workbackimg" style="background-image:url('{{section.settings.workback | img_url:'master'}}');">                  
    <div class="cworkfleximg">
        {% for block in section.blocks %}
           
              
                    <div class="cworkfle25img">
                       <div class="imgflexxximg">
                            <h2 class="bworkheddimg">{{block.settings.bworkhead}}</h2> 
                            {% if block.settings.workimg !=blank %}
                                 <img src="{{block.settings.workimg |img_url:'800x'}}" class="paetimg">
                            {% endif %}
                        </div>
                        <p class="bworkdessimg">{{block.settings.bworkdes}}</p>
                        </div>
                    
        {% endfor %}
                 
  </div>
    </div>
</div>
{% schema %} 
{
  "name": "work coachingmainimg",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "workhead1",
      "label": "Heading"
    },
     {
      "type": "text",
      "id": "worksub",
      "label": "Sub Heading"
    },
   {
    "type": "image_picker",
    "id": "workback",
    "label": "Image"
      }
  ],
"blocks": [
  {
    "type": "blogs",
    "name": "blogs",
    "settings": [
      {
        "type":"image_picker",
        "id":"workimg",
        "label":"Image"
      },
         
       {
    "type": "text",
    "id": "bworkhead",
    "label": "Blog Heading"
      },
      
       {
    "type": "text",
    "id": "bworkdes",
    "label": "Blog Description"
      }
    ]
  }
    ],
 "presets": [
    {
      "name": "work coachingmainimg"
    }
  ]
}

{% endschema %}
