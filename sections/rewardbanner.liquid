  .rbannesign2, .rbannesign {
    padding: 7px 37px;
}
}
@media screen and (max-width: 620px) {
.revebannerdes {
    width: 80%;
}
}
@media screen and (max-width: 520px) {
  h2.rebanerhead{
      font-size: 36px!important;
      line-height:42px;
  }
}
</style>
 