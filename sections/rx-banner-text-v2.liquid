<style>
  .rx-{{section.id}} {
    max-width: 100%;
  }

  .rx-{{section.id}} .container {
    display: flex;
    flex-direction: {% if section.settings.layout == "text_first" %} row-reverse {%else%} row {%endif%}
  }

  .rx-{{section.id}} .container .rx-image {
    max-width: 900px;
    max-height: 430px;
    width: 45%;
  }

  .rx-{{section.id}} .container .rx-text {
    width: 60%;
    padding-left: 65px;
    padding-top: 60px;
    padding-bottom: 60px;
    text-align: justify;
    background-color: #F5F8F1;
  }

  .rx-{{section.id}} .container .rx-text .rx-text-desc {
    max-width: 600px;
  }

  .rx-{{section.id}}  .rx-text .heading {
    font-family: 'Oakley Script';
    font-style: normal;
    font-weight: 400;
    font-size: 64px;
    line-height: 57px;
    letter-spacing: 0.02em;
    color: #1E1E1E;
    margin: 0;
  }

  .rx-{{section.id}}  .rx-text .caption {
    font-family: 'BLT-Heirloom';
    font-style: normal;
    font-weight: 300;
    font-size: 30px;
    line-height: 40px;
    color: #1E1E1E;
    margin-bottom: 0;
    margin-right: 200px;
  }

  .rx-{{section.id}}  .rx-text .content {
    font-family: 'Josefin Sans';
    font-style: normal;
    font-weight: 500;
    font-size: 18px;
    line-height: 30px;
    color: #1E1E1E;
    margin: 0;
    padding-top: 10px;
  }

  @media screen and (max-width: 950px) {
    .rx-{{section.id}} .container {
      flex-direction: column;
    } 

    .rx-{{section.id}} .container .rx-image {
      width: 100%;
      margin-left: auto;
      margin-right: auto;
    }

    .rx-{{section.id}} .container .rx-text {
      width: 100%;
      text-align: center;
      padding-left: 30px;
      padding-right: 30px;
    }
    
    .rx-{{section.id}} .container .rx-text .rx-text-desc {
      margin: auto;
    }

    .rx-{{section.id}}  .rx-text .caption {
      margin-right: auto;
    }
  }
  
</style>


<div class="rx-{{section.id}}">
  <div class="container">
    <img
      class="rx-image"
      src="{{ section.settings.rx_image_banner | image_url: width: 1500, crop: 'center' }}"
      sizes="100%"
      loading="lazy"
    >
    {% comment %} <img class="rx-image"src="https://cdn.shopify.com/s/files/1/0017/5443/1553/files/aboutRuth.jpg?v=1681378728"  alt="about_page_image"/> {% endcomment %}
      
    <div class="rx-text">
      <div class="rx-text-desc">
        <p class="heading">{{section.settings.heading }}</p>
        <p class="caption">{{section.settings.caption}}</p>
        <p class="content">{{section.settings.content | replace: 'p>', 'span>'}}</p>
        <br>
        <p class="content">{{section.settings.content2 | replace: 'p>', 'span>'}}</p>
        {%- for block in section.blocks -%}
          {% case block.type %}
            {%- when 'button' -%}
              {%- if block.settings.button_label != blank -%}
                <div class="rx_img_with_text_button">
                  <a
                    {% if block.settings.button_link == blank %}
                      role="link" aria-disabled="true"
                    {% else %}
                      href="{{ block.settings.button_link }}"
                    {% endif %}
                    class="rx_read_more_btn_green"
                  >
                    {{ block.settings.button_label | escape }}
                    <img 
                      id="rx_read_more_arrow_black"
                      class="rx_read_more_arrow_img_with_text"
                      src="https://cdn.shopify.com/s/files/1/0017/5443/1553/files/blog_arrow.png?v=1680443191"
                    >
                  </a>
              </div>
              {%- endif -%}
          {%- endcase -%}
        {% endfor %}
      <div>
     
    </div>
  </div>
</div>


{% schema %}
  {
    "name": "RX-Banner-Text-V2",
    "tag": "section",
    "class": "section",
    "settings": [
      {
        "type": "image_picker",
        "id": "rx_image_banner",
        "label": "image"
      },
      {
        "type": "text",
        "id": "heading",
        "label": "Heading"
      },
      {
        "type": "text",
        "id": "caption",
        "label": "Caption"
      },
      {
        "type": "richtext",
        "id": "content",
        "label": "First Content"
      },
      {
        "type": "richtext",
        "id": "content2",
        "label": "Second Content"
      },
      {
        "type": "select",
        "id": "layout",
        "options": [
          {
            "value": "image_first",
            "label": "Image First"
          },
          {
            "value": "text_first",
            "label": "Text First"
          }
        ],
        "default": "image_first",
        "label": "Layout",
        "info": "t:sections.image-with-text.settings.layout.info"
      }
    ],
    "blocks": [
      {
        "type": "button",
        "name": "Button",
        "limit": 1,
        "settings": [
          {
            "type": "text",
            "id": "button_label",
            "default": "Button",
            "label": "t:sections.image-with-text.blocks.button.settings.button_label.label",
            "info": "t:sections.image-with-text.blocks.button.settings.button_label.info"
          },
          {
            "type": "url",
            "id": "button_link",
            "label": "t:sections.image-with-text.blocks.button.settings.button_link.label"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "RX-Banner-Text-V2"
      }
    ]
  }

{% endschema %}