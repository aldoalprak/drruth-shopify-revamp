<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.5.9/slick.min.css">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.6.0/slick.js"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

<div class="publickbg">
    <div class="cmax_container">

        <div class="blockk11">
            <div class="coachingslider">
                {% for block in section.blocks %}
                    <div class="sliderdetail">
                        <div>
                            <h2 class="sliderhead">{{block.settings.slidehead}}</h2>
                            <h3 class="sliderdes">{{block.settings.slidedes}}</h3>
                        </div>
                        <div class="parterimg">
                            <img src="{{ block.settings.slideimg|img_url: '800x' }}">
                            <h3>{{block.settings.slideimgtext}}</h3>

                        </div>
                       
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
</div>

{% schema %}
  {
    "name": "coaching_slider",
    "settings": [
      

    ],
    "blocks": [
  {
    "type": "collection",
    "name": "Collection",
    "settings": [
         {
    "type": "text",
    "id": "slidehead",
    "label": "Heading"
      },
          {
    "type": "text",
    "id": "slidedes",
    "label": "Description"
      },

       {
    "type": "image_picker",
    "id": "slideimg",
    "label": "Image"
      },
         {
    "type": "text",
    "id": "slideimgtext",
    "label": "Detail"
      }
    ]
  }
    ],
    "presets": [
    {
    "name": "coaching_slider"
    }
    ]
  }
{% endschema %}


<script>
  
    $('.coachingslider').slick({
       speed: 500,
        autoplaySpeed: 2000,
      arrows: true,
       dots: false,
    infinite: false,
    slidesToShow: 3,
    slidesToScroll: 1,
       autoplay: true,
      prevArrow:"<button type='button' class='drag dogarrow1 slick-prev pull-left'><i class='fa fa-angle-left' aria-hidden='true'></i></button>",
      nextArrow:"<button type='button' class='drag dogarrow2  slick-next pull-right'><i class='fa fa-angle-right' aria-hidden='true'></i></button>",
       responsive: [
    
    {
      breakpoint: 768,
      settings: {
        slidesToShow: 2,
        slidesToScroll: 1
      }
    },
         {
      breakpoint: 520,
      settings: {
        slidesToShow: 1,
        slidesToScroll: 1
      }
    }
   
  ]
  });
</script>