<div class="cmax_container ">
    <div class="answerwidth">
            
        {% for block in section.blocks %}
            <div class="ansquess">
                <div class=" anslab">
                    <label for="text">{{block.settings.labelname}} </label>
                </div>
                <div class="queinput">
                    <input type="text"  name="contact[answer{{index}}]" id="" placeholder="{{block.settings.answer}}" required>
                </div>
            </div>

        {% endfor %}
    </div>
</div>

{% schema %}
  {
    "name": "question",
    "settings": [
       
    ],
    "blocks": [
  {
    "type": "Question",
    "name": "Question",
    "settings": [
     
       {
    "type": "text",
    "id": "labelname",
    "label": "Question"
      },
       {
    "type": "text",
    "id": "answer",
    "label": "Answer"
      }
    ]
  }
    ],
    "presets": [
    {
    "name": "question"
    }
    ]
  }
{% endschema %}
