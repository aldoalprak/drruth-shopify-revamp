<style>
  .rx-{{section.id}} {
    box-sizing:border-box;
    max-width: {{section.settings.desktopMaxWidth}};
    position: relative;
    margin: auto;
  }
  
  
  /* Hide the images by default */
  .rx-{{section.id}} .imgWithText-slides:not(.imgWithText-slides:nth-of-type(1)) {
    display: none;
  }
  
  /* Next & previous buttons */
  .rx-{{section.id}} #rx-prev-imgWithText, .rx-{{section.id}} #rx-next-imgWithText {
    cursor: pointer;
    position: absolute;
    top: 50%;
    width: auto;
    margin-top: -22px;
    padding: 16px;
    color: black;
    font-weight: bold;
    font-size: 18px;
    transition: 0.6s ease;
    border-radius: 0 3px 3px 0;
    user-select: none;
  }
  
  /* Position the "next button" to the right */
  .rx-{{section.id}} #rx-next-imgWithText {
    right: 0;
    border-radius: 3px 0 0 3px;
  }
  
  /* On hover, add a black background color with a little bit see-through */
  .rx-{{section.id}} #rx-prev-imgWithText:hover, #rx-next-imgWithText:hover {
    {% comment %} background-color: rgba(0,0,0,0.8); {% endcomment %}
  }
  
  /* Caption text */
  .rx-{{section.id}} .text {
    color: #f2f2f2;
    font-size: 15px;
    padding: 8px 12px;
    position: absolute;
    bottom: 8px;
    width: 100%;
    text-align: center;
  }
  
  
  /* The dots/bullets/indicators */
  .rx-{{section.id}} .dot {
    cursor: pointer;
    height: 8px;
    width: 8px;
    margin: 0 2px;
    background-color: #DFDFDF;
    border-radius: 50%;
    display: inline-block;
    transition: background-color 0.6s ease;
  }
  
  .rx-{{section.id}} .active, .dot:hover {
    background-color: #184B44;
  }
  
  /* Fading animation */
  .rx-{{section.id}} .fade {
    animation-name: fade;
    animation-duration: 1.5s;
  }


  .rx-{{ section.id }} .slides-group .imgWithText-slides{
   
  }


  .rx-animate-left {
    position:relative;
    animation:animateleft 0.4s;
  }

  .rx-animate-right{
    position:relative;
    animation:animateright 0.4s
  }
  
  @keyframes animateright{
    from{right:-300px;opacity:0} 
    to{right:0;opacity:1}
  }
  
  @keyframes animateleft{
    from{left:-300px;opacity:0} 
    to{left:0;opacity:1}
  }
  
  @keyframes fade {
    from {opacity: .4}
    to {opacity: 1}
  }

