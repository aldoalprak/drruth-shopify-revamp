<div class="rx-{{section.id}}">
  
  <!-- Full-width images with number and caption text -->
  <div class= "slides-group">
    {%- for block in section.blocks -%}
    <div class="imgWithText-slides rx-animate-right">
      
      <div class="section-{{ section.id }} image-with-text image-with-text--{{ block.settings.content_layout }} page-width isolate{% if settings.text_boxes_border_thickness > 0 and settings.text_boxes_border_opacity > 0 and settings.media_border_thickness > 0 and settings.media_border_opacity > 0 %} collapse-borders{% endif %} section-{{ section.id }}-padding">
        <div class="image-with-text__grid grid grid--gapless grid--1-col grid--{% if block.settings.desktop_image_width == 'medium' %}2-col-tablet{% else %}3-col-tablet{% endif %}{% if block.settings.layout == 'text_first' %} image-with-text__grid--reverse{% endif %}">
          <div class="image-with-text__media-item image-with-text__media-item--{{ block.settings.desktop_image_width }} rx_grid__item_img-{{block.settings.grid_type}}">
            <div
              class="image-with-text__media image-with-text__media--{{ block.settings.height }} global-media-settings {% if block.settings.image != blank %}media{% else %}image-with-text__media--placeholder placeholder{% endif %}"
              {% if block.settings.height == 'adapt' and block.settings.image != blank %}
                style="padding-bottom: {{ 1 | divided_by: block.settings.image.aspect_ratio | times: 100 }}%;"
              {% endif %}
            >
              {%- if block.settings.image != blank -%}
                {%- capture sizes -%}
                  (min-width: {{ settings.page_width }}px) {{ settings.page_width | minus: 100 | divided_by: 2 }}px,
                  (min-width: 750px) calc((100vw - 130px) / 2), calc((100vw - 50px) / 2)
                {%- endcapture -%}
                {{
                  block.settings.image
                  | image_url: width: 1500
                  | image_tag: loading: 'lazy', sizes: sizes, widths: '165, 360, 535, 750, 1070, 1500'
                }}
              {%- else -%}
                {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
              {%- endif -%}
            </div>
          </div>
          <div class="image-with-text__text-item rx_grid__item_text-{{block.settings.grid_type}}">
            <div
              id="RX_ImageWithText--{{ section.id }}"
              class="image-with-text__content image-with-text__content--mobile-{{ block.settings.mobile_content_alignment }} image-with-text__content--{{ block.settings.height }} content-container"
            >
              {%- if block.settings.heading -%}
                
                <p class="rx-img-with-text__heading rx-heading-text-alignment-{{block.settings.desktop_title_alignment }}" {{ block.shopify_attributes }}>
                  {{ block.settings.heading | escape }}
                </p>
              {%- endif -%}
              
              {%- if block.settings.description -%}
                <div class="rx-img-with-text__content image-with-text__content--desktop-{{ block.settings.desktop_content_alignment }}">
                  {{ block.settings.description }}
                </div>
              {%- endif -%}
              
              {%- if block.settings.button_label != blank -%}
                <div class="rx_img_with_text_button">
                  <a
                    {% if block.settings.button_link == blank %}
                      role="link" aria-disabled="true"
                    {% else %}
                      href="{{ block.settings.button_link }}"
                    {% endif %}
                    class="rx_read_more_btn_green"
                  >
                    {{ block.settings.button_label | escape }}
                    <img 
                      id="rx_read_more_arrow_black"
                      class="rx_read_more_arrow_img_with_text"
                      src="https://cdn.shopify.com/s/files/1/0017/5443/1553/files/blog_arrow.png?v=1680443191"
                    >
                  </a>
              </div>
              {%- endif -%}
              
              
            </div>
          </div>
        </div>
      </div>

    </div>
  {%- endfor -%}

  </div>


