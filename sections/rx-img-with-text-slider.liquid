<script>

  let slideIndex_imgWithText = 1;
  showSlides_imgWithText(slideIndex_imgWithText);

  {% comment %} // Next/previous controls
  function plusSlides_imgWithText(n) {
    showSlides_imgWithText(slideIndex_imgWithText += n);
  } {% endcomment %}

  function currentSlide(n) {
    showSlides_imgWithText(slideIndex_imgWithText = n);
  }

  {% comment %} let slides_imgWithText = document.getElementsByClassName("imgWithText-slides");
  console.log("==sli===",slides.length)
  if(slides_imgWithText.length === 1) {
    let arrowNextImgWithText = document.getElementById("rx-next-imgWithText");
    let arrowPreviousImgWithText = document.getElementById("rx-prev-imgWithText");

    arrowNextImgWithText.style.display = "none";
    arrowPreviousImgWithText.style.display = "none";
  } {% endcomment %}

  function showSlides_imgWithText(n) {
    let i;
    let slides = document.getElementsByClassName("imgWithText-slides");
    let dots = document.getElementsByClassName("dot");

    if (n > slides.length) {slideIndex_imgWithText = 1};

    if (n < 1) {slideIndex_imgWithText = slides.length};

    for (i = 0; i < slides.length; i++) {
      slides[i].style.display = "none";
    }

    for (i = 0; i < dots.length; i++) {
      dots[i].className = dots[i].className.replace(" active", "");
    }

    slides[slideIndex_imgWithText-1].style.display = "block";
    dots[slideIndex_imgWithText-1].className += " active";
  }

  let autoSlideIndex_IWT = 0;
  if({{section.settings.auto_play}}) autoShowSlides_IWT();

  function autoShowSlides_IWT() {
    let i;
    let slides = document.getElementsByClassName("imgWithText-slides");
    let dots = document.getElementsByClassName("dot");

    for (i = 0; i < slides.length; i++) {
      slides[i].style.display = "none";
    }

    autoSlideIndex_IWT++;

    if (autoSlideIndex_IWT > slides.length) {autoSlideIndex_IWT = 1}

    for (i = 0; i < dots.length; i++) {
      dots[i].className = dots[i].className.replace(" active", "");
    }

    
    
    slides[autoSlideIndex_IWT-1].style.display = "block";
    dots[autoSlideIndex_IWT-1].className += " active";

    setTimeout(autoShowSlides_IWT, 5000); // Change image every 5 seconds
  }

</script>



