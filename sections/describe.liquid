<div class="cmax_container apppy">
    <div class="answerwidth">
        <div class="describebg ">
                <div class="descontent">
                        <h2 class="discrhead">{{section.settings.describehead}}</h2>
                        <h2 class="discrhead2">{{section.settings.describedesa}}</h2>
                </div>
        </div>
        <div class="describeflex">
               
        {% for block in section.blocks %}
            <div class="radioans">
                   <label><input type='radio' name="content"/> {{block.settings.describeradio}} </label>
            </div>
        {% endfor %}
        </div>
    </div>    
</div>

{% schema %}
  {
    "name": "describe",
    "settings": [
          {
    "type": "text",
    "id": "describehead",
    "label": "Heading"
      },
          {
    "type": "text",
    "id": "describedesa",
    "label": "Description"
      }
    ],
    "blocks": [
  {
    "type": "Radio",
    "name": "Radio",
    "settings": [
     
       {
    "type": "text",
    "id": "describeradio",
    "label": "content"
      }
    ]
  }
    ],
    "presets": [
    {
    "name": "describe"
    }
    ]
  }
{% endschema %}
<style>
h2.discrhead ,.discrhead2 {
    font-family: 'Josefin Sans';
    font-style: normal;
    font-weight: 500;
    font-size: 18px;
    line-height: 30px;
    text-transform: uppercase;
    color: #1E1E1E;
        display: inline-block;
        margin:0;
}
.discrhead2{
    font-size:12px;
}
.radioans label{
    font-family: 'Josefin Sans';
font-style: normal;
font-weight: 500;
font-size: 18px;
line-height: 30px;
color: #1E1E1E;

}
.descontent{
     background: #F5F8F1;
        border-radius: 24px;
        padding: 10px 12px;
        padding-left: 2%;
}
