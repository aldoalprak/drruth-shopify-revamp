<div class="cmax_container ">
        <div class="answerwidth terams" >
            {% for block in section.blocks %}
                <div class="ansterm">
                    <ul>
                            <li>{{block.settings.ansteram}}</li>
                        </ul>
                </div>
            {% endfor %}

        </div>
        <div class="alignbtn">
          <div class=" appbtnss">
              <button type="submit" class="appbtnspacess">
 
              apply now
                <svg xmlns="http://www.w3.org/2000/svg" width="34" height="9" viewBox="0 0 34 9" fill="none">
                  <path d="M1.25391 4.5L32.9002 4.5M32.9002 4.5L26.4537 1M32.9002 4.5L26.4537 8" stroke="#184B44" stroke-linecap="round"/>
                </svg>
              </button>
          </div>
      </div>
      {%- render 'thankyou' -%}
    
</div>

