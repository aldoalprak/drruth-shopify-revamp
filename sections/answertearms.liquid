  {
    "name": "answertearms",
    "settings": [
      {
         "type" : "text", 
          "id" : "modaltop",
         "label" : "Popup Heading"
        },
      {
          "id" : "modalsub",
          "type" : "text",
          "label" : "Popup Sub-Heading"
        },
         {
             "type" : "text",
          "id" : "modaldes",
       
          "label" : "Popup Description"
        },
      {
        "type" : "text",
       "id" : "button_home",
         "label" : "Popup-Button"
      },
       {
         "type" : "url",
        "id" : "homeurl",
       "label" : "Popup-Button-link"
      }
    ],
    "blocks": [
  {
    "type": "condition",
    "name": "condition",
    "settings": [
     
       {
    "type": "text",
    "id": "ansteram",
    "label": "content"
      }
    ]
  }
    ],
    "presets": [
    {
    "name": "answertearms"
    }
    ]
  }
{% endschema %}
