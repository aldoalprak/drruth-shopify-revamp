 
<div class="topborder"></div> 
<div class="rewordmax_container main">
        <div class="petviddetail">
            <h2 class="petvheadd">{{section.settings.petvhead}}</h2>
          
        </div>
        <div class="slider slider-for">
            
            {%- for block in section.blocks -%}
                <div class="petviddd">  
                    <div class="petvideo50">
                        <div class="video-container">
                            <iframe id="testvideo" class="testvideo" src="{{ block.settings.petvideourl }}" frameborder="0" allowfullscreen></iframe>
                        </div>
                    </div>
                    <div class="petvideo50">
                       
                        <div class="petvidtitle">
                            <h3 class="petvideott text-left">{{ block.settings.petvideocontent}}</h3>
                            <h3 class="petvideottdess text-left">{{ block.settings.petvideocontentdesss}}</h3>
                        </div>
                        <div class="petvideobtn">

                            <a href="{{ block.settings.petvidbtnurl }}" class="btnspace1">{{ block.settings.petvideobtn }} 
                                <svg xmlns="http://www.w3.org/2000/svg" width="35" height="9" viewBox="0 0 35 9" fill="none">
                                    <path d="M1.37891 4.5L33.0252 4.5M33.0252 4.5L26.5787 1M33.0252 4.5L26.5787 8" stroke="#184B44" stroke-linecap="round"/>
                                </svg>
                            </a>
                        </div> 
                    </div>
                </div>
            {%- endfor -%}
            
        </div>
        <div class="slider petvideoflex slider-nav">
            {%- for block in section.blocks -%}
            <div class="petadvicevideo">
                <div class="video-container">
                    <iframe id="testvideo" class="petvideo" src="{{ block.settings.petvideourl }}" frameborder="0" allowfullscreen></iframe>

                </div>
                <div class="petbideowidth">
                    <h2 class="petvideohead">{{ block.settings.petviid}}</h2>
                </div>
                <div class="petvidtitle">
                  <h3 class="petvideott">{{ block.settings.petvideocontent}}</h3>
                </div>
                <div class="petvideobtn">

                    <a href="{{ block.settings.petvidbtnurl }}" class="btnspace1">{{ block.settings.petvideobtn }} 
                        <svg xmlns="http://www.w3.org/2000/svg" width="35" height="9" viewBox="0 0 35 9" fill="none">
                            <path d="M1.37891 4.5L33.0252 4.5M33.0252 4.5L26.5787 1M33.0252 4.5L26.5787 8" stroke="#184B44" stroke-linecap="round"/>
                        </svg>
                    </a>
                </div> 
            </div>
            {%- endfor -%}
        </div>
</div>
{% schema %} 
{
  "name": "pet_video",
  "tag": "section",
  "class": "pet_video",
  "settings": [
    {
      "type": "text",
      "id": "petvhead",
      "label": "Heading"
    }
    
  ],
   "blocks": [
  {
    "type": "block",
    "name": "block",
    "settings": [
     {
      "type": "url",
      "id": "petvideourl",
      "label": "Video URL"
    },
       {
    "type": "text",
    "id": "petviid",
    "label": "Heading"
      }
      , {
    "type": "text",
    "id": "petvideocontent",
    "label": "Sub Heading"
      },
      {
    "type": "text",
    "id": "petvideocontentdesss",
    "label": "Description"
      },
        {
        "type": "text",
    "id": "petvideobtn",
    "label": "Button"
       },
        {
        "type": "url",
    "id": "petvidbtnurl",
    "label": "Button Link"
       }
    ]
  }
    ],
 "presets": [
    {
      "name": "pet_video"
    }
  ]
}
{% endschema %}
