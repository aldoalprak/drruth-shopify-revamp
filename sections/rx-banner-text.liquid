<style>
  .rx-{{section.id}} {
    max-width: 100%; 
    margin-bottom: 50px;
  }

  .rx-{{section.id}} .container {
    display: flex;
  }

  .rx-{{section.id}} .container .rx-image {
    max-width: 600px;
    width: 40%;
  }

  .rx-{{section.id}} .container .rx-text {
    width: 60%;
    padding-left: 40px;
    padding-right: 15rem;
  }

  .rx-{{section.id}}  .rx-text .heading {
    font-family: 'Oakley Script';
    font-style: normal;
    font-weight: 400;
    font-size: 64px;
    line-height: 57px;
    letter-spacing: 0.02em;
    color: #1E1E1E;
    margin: 0;
  }

  .rx-{{section.id}}  .rx-text .caption {
    font-family: 'BLT-Heirloom';
    font-style: normal;
    font-weight: 300;
    font-size: 30px;
    line-height: 40px;
    color: #1E1E1E;
    margin: 0;
  }

  .rx-{{section.id}}  .rx-text .content {
    font-family: 'Josefin Sans';
    font-style: normal;
    font-weight: 500;
    font-size: 18px;
    line-height: 30px;
    color: #1E1E1E;
    margin: 0;
  }

  @media screen and (max-width: 770px) {
    .rx-{{section.id}} .container {
      flex-direction: column;
    } 

    .rx-{{section.id}} .container .rx-image {
      width: 100%;
      margin-bottom: 30px;
      margin-left: auto;
      margin-right: auto;
    }

    .rx-{{section.id}} .container .rx-text {
      width: 100%;
      text-align: center;
      padding-left: 30px;
      padding-right: 30px;
    }
  
  }
  
</style>


<div class="rx-{{section.id}}">
  <div class="container">
    <img class="rx-image"src="https://cdn.shopify.com/s/files/1/0017/5443/1553/files/aboutRuth.jpg?v=1681378728"  alt="about_page_image"/>
      
    <div class="rx-text">
      <p class="heading">{{section.settings.heading}}</p>
      <p class="caption">{{section.settings.caption}}</p>
      <p class="content">{{section.settings.content}}</p>
    </div>
  </div>
</div>



{% schema %}
  {
    "name": "RX-Banner-Text",
    "tag": "section",
    "class": "section",
    "settings": [
      {
        "type": "image_picker",
        "id": "rx_image_banner",
        "label": "image"
      },
      {
        "type": "text",
        "id": "heading",
        "label": "Heading"
      },
      {
        "type": "text",
        "id": "caption",
        "label": "Caption"
      },
      {
        "type": "text",
        "id": "content",
        "label": "Content"
      }
    ],
    "presets": [
      {
        "name": "RX-Banner-Text"
      }
    ]
  }

{% endschema %}