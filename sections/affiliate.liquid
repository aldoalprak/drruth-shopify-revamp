<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.5.9/slick.min.css">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.6.0/slick.js"></script>

<div class="rewordmax_container afffaqflex">
<div class="affborde">
  <h2 class="affhead">{{section.settings.addhead}}</h2>
</div>

<div class="afffaq">
  <h2 class="faqhead">{{section.settings.mfaqhead}}</h2>
</div>
<div class="wi90 accordion-container">

        {% for block in section.blocks %}
            <div class="set">
                <a href="{{block.settings.faqid}}">{{block.settings.faqbtn}}
                    <svg xmlns="http://www.w3.org/2000/svg" width="25" height="22" viewBox="0 0 25 22" fill="none" class="clsicon pluscls">
                        <g clip-path="url(#clip0_1086_4962)">
                        <path d="M0.806641 10.6445H24.1937" stroke="#CBCAB5" stroke-width="2" stroke-linecap="round" class="plusss"/>
                        <path d="M12.0977 21.2877V0.707031" stroke="#CBCAB5" stroke-width="2" stroke-linecap="round"/>
                        </g><defs><clipPath id="clip0_1086_4962"><rect width="25" height="22" fill="white"/></clipPath></defs></svg>

                        <svg xmlns="http://www.w3.org/2000/svg" width="25" height="3" viewBox="0 0 25 3" fill="none" class="clsicon minuscls displaynone">
                        <path d="M0.806641 1.64453L24.1937 1.64453" stroke="#CBCAB5" stroke-width="2" stroke-linecap="round"/>
                    </svg>
                </a>
                <div class="content">
                    <p>{{block.settings.faqdes}}</p>
                </div>
            </div>

        {% endfor %}
        
</div>
    <div class="afficibtn">
            <a href="{{ section.settings.affaqurl }}" class="howworkorder afffaqbtn">{{ section.settings.afffaqbtn }}
                <svg xmlns="http://www.w3.org/2000/svg" width="34" height="9" viewBox="0 0 34 9" fill="none">
                    <path d="M1.11719 4.5L32.7415 4.5M32.7415 4.5L26.2995 1M32.7415 4.5L26.2995 8" stroke="#1E1E1E" stroke-linecap="round"/>
                </svg>
            </a>
    </div> 
</div>
{% schema %} 
{
  "name": "affiliate faq",
  "tag": "section",
  "class": "reward faq",
  "settings": [
    {
      "type": "text",
      "id": "addhead",
      "label": "Title"
    },
    {
      "type": "text",
      "id": "mfaqhead",
      "label": "Heading"
    },
    {
      "type": "text",
      "id": "afffaqbtn",
      "label": "Button"
    },
     {
      "type": "url",
      "id": "affaqurl",
      "label": "Button Link"
    }
  ],
   "blocks": [
  {
    "type": "collection",
    "name": "Collection",
    "settings": [
     
       {
    "type": "text",
    "id": "faqdes",
    "label": "content"
      },
       {
    "type": "url",
    "id": "faqid",
    "label": "Link Text"
      },
       {
    "type": "text",
    "id": "faqbtn",
    "label": "Button"
      }
    ]
  }
    ],
 "presets": [
    {
      "name": "affiliate faq"
    }
  ]
}
{% endschema %}
<style>
.wi90.accordion-container .set{
margin:3% 0;
}
h2.affhead {
    font-family: 'BLT-Heirloom';
    font-style: normal;
    font-weight: 300;
    font-size: 30px;
    line-height: 40px;
    text-align: center;
    color: #1E1E1E;
}
.affborde {
    width: 80%;
    margin: 0 auto;
}
.accordion-container{
  position: relative;
 width:65%;
  height: auto;
  margin: 10px auto;
  
}
.afficibtn{
    margin: 0 auto;
    border: 2px solid #184B44;
    border-radius: 25.5px;
    margin-bottom: 5%;
    margin-top: -4%;
}
.accordion-container > h2{
  text-align: center;
  color: #fff;
  padding-bottom: 5px;
  margin-bottom: 20px;
  padding-bottom: 15px;
  border-bottom: 1px solid #ddd;
}
.afffaqflex{
    display: flex;
    flex-direction: column;
}
..affborde{
        margin-top: 5%;
}
.set{
  position: relative;
  width: 100%;
  height: auto;
 background: #F5F8F1;
border-radius: 24px;
}
.wi90.accordion-container .set > a {
padding: 4% 4%;
}
.set > a{
  display: block;
     padding: 30px 30px;
  text-decoration: none;
  transition:all 0.2s linear;
  font-family: 'Josefin Sans';
font-style: normal;
font-weight: 500;
font-size: 18px;
line-height: 30px;
text-transform: uppercase;
color: #1E1E1E;
    
}
.wi90.accordion-container {
    margin-bottom: 8%;
}
.set > a i {
    float: right;
    margin-top: 2px;
}
.set > a.active{
  background-color:#F5F8F1;

      display: flex;
    align-items: center;
    justify-content: space-between;
}
.content{
  background-color: #fff;
  display:none;
  padding:0 5%;
}
.content p{
  padding: 10px 15px;
  margin: 0;
 font-family: 'Josefin Sans';
    font-style: normal;
    font-weight: 500;
    font-size: 18px;
    line-height: 30px;
    color: #1E1E1E;
}
.howworkorder svg{
  margin-left:85px;
}
@media screen and (max-width: 520px){
    h2.affhead{
        font-size: 22px;
        line-height: 30px;
    }
    .affborde{
        width:98%;
    }
}
@media screen and (max-width: 420px){
    a.howworkorder.afffaqbtn{
        padding: 0px 48px;
    }
    .set > a{
          font-size: 16px;

    }
}
@media screen and (max-width: 320px){
    a.howworkorder.afffaqbtn {
    padding: 0px 28px;
}
}
</style>
<script> 
$(document).ready(function() {
   
  $(".set > a").on("click", function(e) {
     e.preventDefault();
    if ($(this).hasClass("active")) {
      console.log('in active');
      $(this).removeClass("active");
      $(this)  .siblings(".content") .slideUp(200);
      $(this).closest('.set').find('.clsicon.pluscls').removeClass("displaynone");
      $(this).closest('.set').find('.clsicon.minuscls').addClass("displaynone");
    } else {
         console.log('not in active');
      $(".set > a .clsicon.minuscls")
        .addClass("displaynone");
      $(".set > a .clsicon.pluscls")
        .removeClass("displaynone");
       $(this).closest('.set').find('.clsicon.minuscls').removeClass("displaynone");
      $(this).closest('.set').find('.clsicon.pluscls').addClass("displaynone");
      $(".set > a").removeClass("active");
      $(this).addClass("active");
      $(".content").slideUp(200);
      $(this)
        .siblings(".content")
        .slideDown(200);
    }
  });
});

</script>