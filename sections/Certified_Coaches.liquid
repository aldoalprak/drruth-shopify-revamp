<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.5.9/slick.min.css">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.6.0/slick.js"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

<div class="cmax_container">
    <div class="testidetail">
        <h2 class="testheadd">{{section.settings.testhead}}</h2>
        <h3 class="certifiedtext">{{section.settings.testdes}}</h3>
    </div>
    <div class="testimonialflex1">
        {%- for block in section.blocks -%}
            <div class="testvideo">
                <div class="video-container">
                    <iframe id="testvideo" class="testvideo" src="{{ block.settings.test_url1 }}" frameborder="0" allowfullscreen></iframe>

                </div>
                <div class="testwidth">
                    <h2 class="testihead">{{ block.settings.textid}}</h2>
                </div>
            </div>
        {%- endfor -%}
    </div>
    <div class="blogbodr2">
        <a href="{{ section.settings.coachurl }}" class="btnspace1">{{ section.settings.coachbtn }} <svg xmlns="http://www.w3.org/2000/svg" width="16" height="12" viewBox="0 0 16 12" fill="none">
        <path fill-rule="evenodd" clip-rule="evenodd" d="M9.2244 0.558058C9.46848 0.313981 9.86421 0.313981 10.1083 0.558058L15.1083 5.55806C15.3524 5.80214 15.3524 6.19786 15.1083 6.44194L10.1083 11.4419C9.86421 11.686 9.46848 11.686 9.2244 11.4419C8.98032 11.1979 8.98032 10.8021 9.2244 10.5581L13.1575 6.625H1.33301C0.98783 6.625 0.708008 6.34518 0.708008 6C0.708008 5.65482 0.98783 5.375 1.33301 5.375H13.1575L9.2244 1.44194C8.98032 1.19786 8.98032 0.802136 9.2244 0.558058Z" fill="#49AF78"/>
        </svg></a>
    </div> 
</div>
{% schema %} 
{
  "name": "Certified_Coaches",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "testhead",
      "label": "Heading"
    }
    ,  {
      "type": "text",
      "id": "testdes",
      "label": "Sub Heading"
    } ,
    {
        "type": "text",
    "id": "coachbtn",
    "label": "Button"
       },
        {
        "type": "url",
    "id": "coachurl",
    "label": "Button Link"
       }
  ],
   "blocks": [
  {
    "type": "block",
    "name": "block",
    "settings": [
     {
      "type": "url",
      "id": "test_url1",
      "label": "Video URL"
    },
       {
    "type": "text",
    "id": "textid",
    "label": "Heading"
      }
      
    ]
  }
    ],
 "presets": [
    {
      "name": "Certified_Coaches"
    }
  ]
}
{% endschema %}
<script>
    $('.testimonialflex1').slick({
        speed: 500,
        autoplaySpeed: 2000,
        arrows: true,
        dots: false,
        infinite: true,
        slidesToShow: 3,
        slidesToScroll: 1,
        autoplay: true,
        prevArrow:"<button type='button' class='drag coacharrow slick-prev pull-left'><i class='fa fa-angle-left' aria-hidden='true'></i></button>",
        nextArrow:"<button type='button' class='drag coacharrow2  slick-next pull-right'><i class='fa fa-angle-right' aria-hidden='true'></i></button>",
        responsive: [
    {
      breakpoint: 768,
      settings: {
        slidesToShow: 2,
        slidesToScroll: 1
      }
    },
         {
      breakpoint: 520,
      settings: {
        slidesToShow: 1,
        slidesToScroll: 1
      }
    }
   
  ]
  });
</script>