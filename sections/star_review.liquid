<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

<div class="customercontainer">
  <div class="customreviewside">
    <h2 class="starheadreview">{{section.settings.starreviewhead}}</h2>
    <div class="ratinconain multipleitems">
      {% for block in section.blocks %}
        
        <div class="reviestep">
        
          <div class="customerdetail">
               
        <div class="starflex">
  <h1 class="confirmedetail">{{ block.settings.confimed }}</h1>
            <div class="stardiv">
               {% if block.settings.rating == 5 %}
               <span class="fa fa-star checked"></span>
               <span class="fa fa-star checked"></span>
               <span class="fa fa-star checked"></span>
               <span class="fa fa-star checked"></span>
               <span class="fa fa-star checked"></span>
               {% endif %}
               {% if block.settings.rating == 4 %}
               <span class="fa fa-star checked"></span>
               <span class="fa fa-star checked"></span>
               <span class="fa fa-star checked"></span>
               <span class="fa fa-star checked"></span>
               <span class="fa fa-star-o"></span>
               {% endif %}
               {% if block.settings.rating == 3 %}
               <span class="fa fa-star checked"></span>
               <span class="fa fa-star checked"></span>
               <span class="fa fa-star checked"></span>
              <span class="fa fa-star-o"></span>
              <span class="fa fa-star-o"></span>
               {% endif %}
               {% if block.settings.rating == 2 %}
               <span class="fa fa-star checked"></span>
               <span class="fa fa-star checked"></span>
              <span class="fa fa-star-o"></span>
              <span class="fa fa-star-o"></span>
              <span class="fa fa-star-o"></span>
               {% endif %}
               {% if block.settings.rating == 1 %}
               <span class="fa fa-star checked"></span>
              <span class="fa fa-star-o"></span>
              <span class="fa fa-star-o"></span>
              <span class="fa fa-star-o"></span>
              <span class="fa fa-star-o"></span>
               {% endif %}
            </div>
           
        </div>
            <p class="">{{ block.settings.confimedp }}</p>
          <div class="starflex1">
            <div class="starbg"><img src="{{ block.settings.mainimage |img_url: '800x' }}"></div>
            <h2 class="starthead"> {{ block.settings.signtext }}</h2>
        </div>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
{
"name": "star_review",

"settings": [
{
     "type": "text",
    "id": "starreviewhead",
    "label": "starheadreview"
}
],
"blocks":[
{
"type" : "block",
"name" : "block",
"settings" : [
               {
    "type": "image_picker",
    "id": "mainimage",
    "label": "Image"
      },
{
            "type": "range",
            "id": "rating",
            "min": 0,
            "max": 5,
            "step": 1,
            "label": "Rating",
            "info": "Set less than '1' to disable Rating.",
            "default": 5
          },
    {
        "id" : "confimed",
        "type" : "text",
        "label" : "Revie Detail"
      },
  {
        "id" : "confimedp",
        "type" : "text",
        "label" : "Revie Detail"
      },
  {
        "id" : "signtext",
        "type" : "text",
        "label" : "text"
      }
]
}

],
"presets" : [
{
  "name" : "star_review ",
  "category" : "Testimonials"

  }
]
}
{% endschema %}

