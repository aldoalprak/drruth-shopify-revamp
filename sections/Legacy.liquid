<div class="py " style="background-color: #F5F8F1;">
    <div class="max-containers ">
          <div><h2 class="numhead">{{ section.settings.numhead }}</h2></div>
          <div class="numflex">
                {% for block in section.blocks %}
                    <div class="num25">
